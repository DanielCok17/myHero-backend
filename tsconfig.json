{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "paths": {
      "config": ["./src/config"],
      "controllers": ["./src/controllers"],
      "middleware": ["./src/middleware"],
      "models": ["./src/models"],
      "routes": ["./src/routes"]
    }
  },
  "include": ["src/**/*.ts", "src/types.d.ts"],
  "exclude": ["node_modules", "dist"]
}